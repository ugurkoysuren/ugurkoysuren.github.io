<div class="col">
  <a href="{% if lecture.redirect %}{{ lecture.redirect }}{% else %}{{ lecture.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if lecture.img %}
        {%
          include figure.liquid
          loading="eager"
          path=lecture.img
          sizes = "250px"
          alt="lecture thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ lecture.title }}</h2>
        <p class="card-text">{{ lecture.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if lecture.youtube %}
            <div class="youtube-icon">
              <div class="icon" data-toggle="tooltip" title="Watch on YouTube">
                <a href="{{ lecture.youtube }}"><i class="fa-brands fa-youtube yt-icon"></i></a>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div> 