<div class="col mb-4">
  <a href="{% if lecture.redirect %}{{ lecture.redirect }}{% else %}{{ lecture.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if lecture.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=lecture.img sizes="(min-width: 768px) 156px, 50vw" alt="lecture thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if lecture.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ lecture.title }}</h3>
            <p class="card-text">{{ lecture.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if lecture.youtube %}
                <div class="youtube-icon">
                  <div class="icon" data-toggle="tooltip" title="Watch on YouTube">
                    <a href="{{ lecture.youtube }}"><i class="fa-brands fa-youtube yt-icon"></i></a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div> 